<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="#429d">

    <RelativeLayout
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_message_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_message" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/div1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_message_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/edit_comment" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/div3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/send_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_send" />
        <Button
            android:id="@+id/send_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_button1"
            android:text="@string/button_clear" />
        <Button
            android:id="@+id/send_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_button2"
            android:text="@string/button_cancel" />
    </RelativeLayout>

</RelativeLayout>